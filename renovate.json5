{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:js-app', // https://docs.renovatebot.com/presets-config/#configjs-app
    ':semanticCommits',
    ':semanticCommitTypeAll(chore)',
  ],
  commitMessageAction: 'ðŸ”— update',
  internalChecksFilter: 'strict', // required for packageRules[].stabilityDays
  dependencyDashboard: true,
  dependencyDashboardApproval: true, // require approval for all updates initially
  pin: {
    dependencyDashboardApproval: false,
    automerge: true,
  },
  separateMinorPatch: true,
  separateMajorMinor: true,
  packageRules: [
    {
      matchDatasources: ['npm'],
      stabilityDays: 3, // npm packages less than 72 hours (3 days) old can be unpublished
    },

    {
      extends: 'monorepo:nrwl',
      groupName: 'Nrwl Nx monorepo',
      postUpgradeTasks: {
        commands: [
          'npx nx migrate @nrwl/workspace@{{{newVersion}}} --from=@nrwl/workspace@{{{currentVersion}}}',
          'yarn && [ -f migrations.json ] && npx nx migrate --run-migrations=migrations.json',
        ],
        fileFilters: ['**/**'],
        executionMode: 'branch',
      },
    },
  ],
}
